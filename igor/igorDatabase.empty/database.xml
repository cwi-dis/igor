<?xml version="1.0" ?><data xmlns:au="http://jackjansen.nl/igor/authentication" xmlns:own="http://jackjansen.nl/igor/owner">
	<environment>
		<night/>
		<location/>
		<energy/>
		<weather/>
		<messages/>
		<devices/>
		<lights/>
		<people/>
		<systemHealth>
			<messages/>
		</systemHealth>
	</environment>
	<status>
		<igor/>
		<sensors/>
		<devices/>
		<services/>
	</status>
	<sensors/>
	<devices>
	</devices>
	<services>
		<igor/>
	</services>
	<people/>
	<identities>
		<admin>
			<au:capability>
				<cid>root</cid>
				<child>default-static</child>
				<child>default-environment</child>
				<child>default-status</child>
				<child>default-igor</child>
				<child>default-accessControl</child>
				<child>default-sandbox</child>
				<child>people-people</child>
				<child>admin-data</child>
				<child>admin-action</child>
				<child>admin-internal</child>
				<child>admin-plugin</child>
				<child>admin-filesystem</child>
				<child>action-plugin</child>
				<child>action-action</child>
			    <child>external</child>
			    <child>action-internal</child>
			    <child>action-environment</child>
			</au:capability>
			<au:capability>
				<obj>/data</obj>
				<parent>root</parent>
				<get>descendant-or-self</get>
				<cid>admin-data</cid>
				<put>descendant</put>
				<post>descendant</post>
				<delete>descendant</delete>	
				<delegate>true</delegate>
			</au:capability>
			<au:capability>
				<get>descendant</get>
				<obj>/action</obj>
				<parent>root</parent>
				<cid>admin-action</cid>
				<delegate>true</delegate>
			</au:capability>
			<au:capability>
				<get>descendant</get>
				<obj>/internal</obj>
				<parent>root</parent>
				<cid>admin-internal</cid>
				<delegate>true</delegate>
			</au:capability>
			<au:capability>
				<get>descendant</get>
				<obj>/plugin</obj>
				<parent>root</parent>
				<cid>admin-plugin</cid>
				<delegate>true</delegate>
			</au:capability>
			<au:capability>
				<get>self</get>
				<obj>/filesystem</obj>
				<parent>root</parent>
				<cid>admin-filesystem</cid>
				<delegate>true</delegate>
			</au:capability>
            <au:capability>
                <delegate>external</delegate>
                <parent>root</parent>
                <cid>external</cid>
			</au:capability>
		</admin>
		<au:capability>
			<get>descendant-or-self</get>
			<obj>/data/people</obj>
			<parent>root</parent>
			<cid>people-people</cid>
		</au:capability>
	</identities>
	<actions>
	    <action own:igor="igor">
	        <name>_start</name>
			<representing>igor/start</representing>
	        <url>/internal/started</url>
	    </action>
		<action own:igor="igor">
			<name>_save</name>
			<interval>3600</interval>
			<minInterval>60</minInterval>
			<url>/internal/save</url>
			<representing>igor/save</representing>
			<xpath>/data/plugindata//* | /data/actions/* | /data/triggers/* | /data/identities//* | /data/sandbox/*</xpath>
			<notBefore/>
		</action>
        <action own:igor="igor">
            <name>_cleanup</name>
            <method>DELETE</method>
			<representing>igor/std</representing>
            <url>/data/environment/messages/message[position()&lt;last()]</url>
			<notBefore/>
        </action>
		<action own:igor="igor">
			<name>_updateActions</name>
			<xpath>/data/actions/* | /data/plugindata/*/action</xpath>
			<representing>igor/core</representing>
			<url>/internal/updateActions</url>
			<notBefore/>
		</action>
		<au:capability>
			<get>descendant</get>
			<obj>/plugin</obj>
			<parent>root</parent>
			<cid>action-plugin</cid>
		</au:capability>
		<au:capability>
			<get>descendant</get>
			<obj>/action</obj>
			<parent>root</parent>
			<cid>action-action</cid>
		</au:capability>
        <au:capability>
            <get>descendant</get>
            <obj>/internal</obj>
            <parent>root</parent>
            <cid>action-internal</cid>
        </au:capability>
        <au:capability>
            <obj>/data/environment</obj>
            <parent>root</parent>
            <get>descendant</get>
            <cid>action-environment</cid>
            <put>descendant</put>
            <post>descendant</post>
            <delete>descendant</delete>
        </au:capability>
    </actions>
	<sandbox>
	</sandbox>
	<plugindata>
	</plugindata>
	<au:access>
		<au:defaultCapabilities>
			<au:capability>
				<get>child</get>
				<obj>/static</obj>
				<parent>root</parent>
				<cid>default-static</cid>
			</au:capability>
			<au:capability>
				<get>descendant-or-self</get>
				<obj>/data/environment</obj>
				<parent>root</parent>
				<cid>default-environment</cid>
			</au:capability>
			<au:capability>
				<get>descendant-or-self</get>
				<obj>/data/status</obj>
				<parent>root</parent>
				<cid>default-status</cid>
			</au:capability>
			<au:capability>
				<get>descendant-or-self</get>
				<obj>/data/services/igor</obj>
				<parent>root</parent>
				<cid>default-igor</cid>
			</au:capability>
			<au:capability>
				<get>child</get>
				<obj>/internal/accessControl</obj>
				<parent>root</parent>
				<cid>default-accessControl</cid>
			</au:capability>
			<au:capability>
				<get>descendant-or-self</get>
				<put>descendant</put>
				<post>descendant</post>
				<delete>descendant</delete>
				<obj>/data/sandbox</obj>
				<parent>root</parent>
				<cid>default-sandbox</cid>
			</au:capability>
		</au:defaultCapabilities>
		<au:exportedCapabilities>
		</au:exportedCapabilities>
		<au:revokedCapabilities>
		</au:revokedCapabilities>
		<au:unusedCapabilities>
		</au:unusedCapabilities>
		<au:sharedKeys>
		</au:sharedKeys>
	</au:access>
</data>
