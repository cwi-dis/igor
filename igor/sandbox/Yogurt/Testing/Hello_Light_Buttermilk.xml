 <actorCollection>
    <actor>
        <name>switch</name>
        <states>
            <state>
                <localName>on</localName>
                <path>active</path>
            </state>
        </states>
        <instances>
            <instance>
                <name>kitchen_switch</name>
                <location>/data/sensors/switch</location>
            </instance>
        </instances>
    </actor>
    <actor>
        <name>light</name>
        <inputs>
            <input>
                <type>switch</type>
                <name>switch1</name>
            </input>
        </inputs>
        <states>
            <state>
                <localName>illuminated</localName>
                <path>on</path>
            </state>    
        </states>
        <actions>
            <action>
                <on>
                    <trigger>switch1.on</trigger>
                </on>
                <update>
                    <target>illuminated</target>
                    <value>switch1.on</value>
                </update>
            </action>
        </actions>
        <instances>
            <instance>
                <name>kitchen_light</name>
                <location>/data/devices/light[location='Kitchen']</location>
                <inputs>
                    <input>
                        <type>switch</type>
                        <name>switch1</name>
                        <actualName>kitchen_switch</actualName>
                    </input>
                </inputs>
            </instance>
        </instances>
    </actor>
</actorCollection>